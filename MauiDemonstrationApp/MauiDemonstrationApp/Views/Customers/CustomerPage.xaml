<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemonstrationApp.Views.Customers.CustomerPage"
             Title="Customer">
    
    <StackLayout Padding="20">

        <Label Text="Nome:" />
        <Entry Placeholder="Digite o nome" Text="{Binding Name}" />

        <Label Text="Email:" />
        <Entry Placeholder="Digite o email" Text="{Binding Email}" />

        <Label Text="Avatar URL:" />
        <Entry Placeholder="Digite a URL do avatar" Text="{Binding Avatar}" />

        <!-- BotÃ£o de Salvar -->
        <Button Text="Salvar" Clicked="OnSaveButtonClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>

    </StackLayout>
</ContentPage>